# Production Environment Configuration for IFROF.COM

# ============================================================================
# NODE ENVIRONMENT
# ============================================================================
NODE_ENV=production
PORT=3000

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
# MySQL connection string
# Format: mysql://username:password@host:port/database
DATABASE_URL=mysql://ifrof_user:CHANGE_THIS_PASSWORD@localhost:3306/ifrof_production

# ============================================================================
# OAUTH CONFIGURATION (Client-side, injected by Vite at build time)
# ============================================================================
VITE_OAUTH_PORTAL_URL=https://auth.manus.im
VITE_APP_ID=ifrof-production

# OAuth server URL (Server-side)
OAUTH_SERVER_URL=https://auth.manus.im

# ============================================================================
# STRIPE PAYMENT CONFIGURATION
# ============================================================================
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=

# ============================================================================
# EMAIL CONFIGURATION
# ============================================================================
# Email service provider (e.g., SendGrid, Mailgun, AWS SES)
EMAIL_SERVICE=
EMAIL_API_KEY=
EMAIL_FROM=noreply@ifrof.com
EMAIL_FROM_NAME=IFROF Platform

# ============================================================================
# AWS S3 CONFIGURATION (for file uploads)
# ============================================================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=ifrof-uploads

# ============================================================================
# SECURITY
# ============================================================================
# Secret key for encryption (generate with: openssl rand -hex 32)
ENCRYPTION_KEY=

# JWT secret for token signing (generate with: openssl rand -base64 32)
JWT_SECRET=

# ============================================================================
# API CONFIGURATION
# ============================================================================
API_ORIGIN=https://api.ifrof.com
FRONTEND_URL=https://ifrof.com

# ============================================================================
# ANALYTICS (Optional)
# ============================================================================
VITE_ANALYTICS_ENDPOINT=https://analytics.ifrof.com
VITE_ANALYTICS_WEBSITE_ID=ifrof-production

# ============================================================================
# EXTERNAL SERVICES (Optional)
# ============================================================================
# Google Maps API Key (for factory locations)
GOOGLE_MAPS_API_KEY=

# Sentry for error tracking (Optional)
SENTRY_DSN=

# ============================================================================
# RATE LIMITING
# ============================================================================
# API rate limit (requests per 15 minutes)
RATE_LIMIT_MAX=100

# Auth rate limit (attempts per minute)
AUTH_RATE_LIMIT_MAX=5

# ============================================================================
# HTTPS/SSL
# ============================================================================
# Force HTTPS redirect in production
FORCE_HTTPS=true

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=info
LOG_FILE=/var/log/ifrof/app.log
